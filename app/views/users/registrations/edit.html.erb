<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <%= devise_error_messages! %>
    </div>
  </div>
  
  <fieldset class="large-12 columns">
    <legend align="center" style="background-color:transparent;">
      <h3 >Edit Your Registration Form</h3>
    </legend>
    
    <div class="row"> 
      <div class="large-4 columns"> 
        <label>*FirstName</label> 
        <input type="text" value ="<%= current_user.firstname %>"  /> 
      </div> 

      <div class="large-4 columns"> 
        <label>*SurName</label> 
        <input type="text"  value ="<%= current_user.surname %>" /> 
      </div>  

      <div class="large-4 columns"> 
        <label>*FatherName</label> 
        <input type="text"  value ="<%= current_user.fathername %>"  /> 
      </div>

      <div class="large-4 columns"> 
        <label>*Mobile Number</label> 
        <input type="text"  value ="<%= current_user.mobileno %>" /> 
      </div> 
      
      <div class="large-4 columns"> 
        <label>*Date of Birth</label> 
        <input type="text"id="datepicker" value ="<%= current_user.dob %>" />
      </div> 

      <div class="large-4 columns"> 
        <label>*Gender</label> 
        <h6 class="inline">
          <input type="radio" value="<%= current_user.gender %>" value="Male" id="pokemonRed">&nbsp;Male&nbsp;
          <input type="radio" value="<%= current_user.gender %>" value="Female" id="pokemonBlue">&nbsp;Female
        </h6>
      </div> 
    </div>
    
    <div class="row"> 
      <div class="large-4 columns"> 
        <label>*Email-Id</label> 
        <%= f.email_field :email, :autofocus => true, :placeholder => "enter your email id" %>
      </div> 

      <div class="large-4 columns">
        <label>*Password</label>
        <%= f.password_field :password , :placeholder => "enter your password"%>
      </div>
    
      <div class="large-4 columns">
        <label>*Confirm Password</label>
        <%= f.password_field :password_confirmation, :placeholder => "re-enter your password" %>
      </div>
    </div>
        
    <div class="row">
      <div class="large-4 columns"> 
        <label>*Address</label> 
        <textarea  value ="<%= current_user.address %>"></textarea> 
      </div> 
    </div> 
    
    <div class="row">
      <div class="large-5 columns">
       <p> <button type="update" class="button success inverse  large" >Update</button>
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class=> "button success large" %></p>
      </div>
    </div>
  <% end %>
</fieldset>




<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.9.1.js"></script>
<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
